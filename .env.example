# ============================================================================
# FaceBlur Project - Environment Variables (예시 파일)
# ============================================================================
# 이 파일은 환경 변수 템플릿입니다.
#
# 사용 방법:
# 1. 이 파일을 '.env'로 복사: cp .env.example .env
# 2. .env 파일을 열어서 실제 값으로 변경
# 3. .env 파일은 절대 Git에 커밋하지 마세요! (.gitignore에 포함됨)
# ============================================================================

# ============================================================================
# Django 기본 설정
# ============================================================================

# SECRET_KEY: Django 암호화 키 (무작위 문자열)
# - 세션, 쿠키 암호화에 사용
# - 운영 환경에서는 반드시 변경하고 비밀로 유지!
# - 생성 방법: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production-abc123xyz456

# DEBUG: 디버그 모드 (개발: True, 운영: False)
# - True: 상세한 에러 메시지 표시
# - False: 에러 페이지를 사용자 친화적으로 표시
DEBUG=True

# ALLOWED_HOSTS: 접속 허용 도메인 (쉼표로 구분)
# - 개발: localhost,127.0.0.1
# - 운영: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# 데이터베이스 설정
# ============================================================================

# 개발 환경: SQLite (기본)
# 운영 환경: PostgreSQL (RDS)

# PostgreSQL 설정 (운영 환경에서 사용)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=faceblur_db
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# SQLite 사용 시 (개발 환경)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# ============================================================================
# Redis 설정 (캐싱 & Celery 브로커)
# ============================================================================

# Redis URL
# - 로컬: redis://localhost:6379/0
# - Docker: redis://redis:6379/0
# - AWS ElastiCache: redis://your-elasticache-endpoint:6379/0
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# AWS 설정 (S3, EC2)
# ============================================================================

# AWS 자격증명
# - IAM 사용자 생성 후 Access Key 발급
# - S3, EC2 접근 권한 필요
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# AWS Region (서울: ap-northeast-2)
AWS_REGION=ap-northeast-2

# S3 버킷 설정
# - 영상 파일 저장용 버킷 이름
# - S3 콘솔에서 미리 생성해야 함
AWS_STORAGE_BUCKET_NAME=faceblur-videos

# S3 사용 여부
# - True: 파일을 S3에 저장
# - False: 로컬 파일 시스템에 저장 (개발용)
USE_S3=False

# ============================================================================
# FastAPI AI 서버 설정
# ============================================================================

# FastAPI 서버 URL
# - 로컬 개발: http://localhost:8001
# - Docker: http://fastapi:8001
# - 운영 환경: http://your-fastapi-ec2-ip:8001 (내부 통신)
FASTAPI_BASE_URL=http://localhost:8001

# ============================================================================
# Celery 설정
# ============================================================================

# Celery Broker URL (Redis 사용)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery Result Backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# 이메일 설정 (선택사항 - 알림 전송용)
# ============================================================================

# SMTP 서버 설정
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# ============================================================================
# 기타 설정
# ============================================================================

# CORS 허용 도메인 (쉼표로 구분)
# - 프론트엔드 개발 서버: http://localhost:3000
# - 운영 프론트엔드: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 업로드 파일 최대 크기 (MB)
MAX_UPLOAD_SIZE=2048

# 영상 처리 제한 시간 (초)
VIDEO_PROCESSING_TIMEOUT=3600

# ============================================================================
# 로깅 레벨
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# 보안 팁:
#
# 1. .env 파일은 절대 공개 저장소에 업로드하지 마세요
# 2. AWS 키는 IAM에서 최소 권한 원칙으로 생성하세요
# 3. SECRET_KEY는 운영 환경에서 반드시 변경하세요
# 4. DB 비밀번호는 강력한 암호로 설정하세요
# 5. 정기적으로 AWS Access Key를 로테이션하세요
# ============================================================================
